{% extends "base.twig" %}

{% block title %}Tickets - TicketFlow{% endblock %}

{% block navbar %}
    {% include 'components/navbar.twig' %}
{% endblock %}

{% block content %}
<div class="page tickets-page">
    <div class="container">
        <div class="tickets-header">
            <div>
                <h2>Ticket Management</h2>
                <p class="page-description">Create, view, edit, and manage all your tickets</p>
            </div>
            <button class="btn btn-primary" data-action="new-ticket">
                <span>➕</span> New Ticket
            </button>
        </div>

        <div class="empty-state" style="display: none;">
            <h3>No tickets yet</h3>
            <p>Create your first ticket to get started</p>
        </div>

        <div class="tickets-grid"></div>
    </div>

    <!-- Modal -->
    <div class="modal-overlay">
        <div class="modal">
            <div class="modal-header">
                <h3>Create New Ticket</h3>
                <button class="btn-icon" aria-label="Close modal">✕</button>
            </div>

            <form id="ticket-form">
                <div class="form-group">
                    <label for="title">Title *</label>
                    <input
                        type="text"
                        id="title"
                        name="title"
                        required
                        aria-describedby="title-error"
                    />
                </div>

                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea
                        id="description"
                        name="description"
                        rows="4"
                        aria-describedby="description-error"
                    ></textarea>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="status">Status *</label>
                        <select
                            id="status"
                            name="status"
                            required
                            aria-describedby="status-error"
                        >
                            <option value="open">Open</option>
                            <option value="in_progress">In Progress</option>
                            <option value="closed">Closed</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="priority">Priority</label>
                        <select id="priority" name="priority">
                            <option value="low">Low</option>
                            <option value="medium" selected>Medium</option>
                            <option value="high">High</option>
                        </select>
                    </div>
                </div>

                <div class="modal-actions">
                    <button type="button" class="btn btn-outline">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Ticket</button>
                </div>
            </form>
        </div>
    </div>

    {% include 'components/footer.twig' %}
</div>
{% endblock %}